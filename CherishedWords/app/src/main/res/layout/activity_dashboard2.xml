<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard2"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <androidx.cardview.widget.CardView
                    android:id="@+id/opt1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/purple_700"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/stu"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="casual"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="Student life"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/opt2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/blue"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/life"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Stay Focused"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/opt3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/green1"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:src="@drawable/gym"
                            android:layout_gravity="center"
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Gym Motivation"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/opt4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/orange1"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/work"
                            android:layout_gravity="center"
                            android:layout_marginRight="25dp"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Work"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/opt5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/pinky"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/islam"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Religion"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--<androidx.cardview.widget.CardView
                    android:id="@+id/opt6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/pink1"
                    android:layout_marginBottom="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/relationship"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="casual"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:text="Relationship"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>-->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="50dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@android:color/transparent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        <Button
                            android:id="@+id/btnhelp"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:textSize="30dp"
                            android:background="@drawable/button"
                            android:drawableEnd="@drawable/ic_baseline_help_outline_24"
                            android:padding="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"/>
                        <Button
                            android:id="@+id/btnsettings"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:textSize="30dp"
                            android:background="@drawable/button"
                            android:drawableEnd="@drawable/ic_baseline_settings_24"
                            android:padding="10dp"
                            android:layout_marginRight="30dp"/>
                        <Button
                            android:id="@+id/btnfav"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:textSize="30dp"
                            android:background="@drawable/button"
                            android:drawableEnd="@drawable/ic_baseline_favorite_border_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:layout_marginRight="30dp"/>
                        <Button
                            android:id="@+id/btnexit"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:textSize="30dp"
                            android:background="@drawable/button"
                            android:drawableEnd="@drawable/ic_baseline_exit_to_app_24"
                            android:drawablePadding="20dp"
                            android:padding="10dp"
                            android:layout_marginRight="30dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
